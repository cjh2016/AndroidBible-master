<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <FrameLayout
            android:id="@+id/replace_fragment_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/replace_show_fragment"/>

    <android.support.v7.widget.AppCompatButton
            android:id="@+id/replace_show_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="showShowFragment"
            android:onClick="showShowFragment"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/replace_fragment_container"
            app:layout_constraintRight_toLeftOf="@id/replace_hide_fragment"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <android.support.v7.widget.AppCompatButton
            android:id="@+id/replace_hide_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="showHideFragment"
            android:onClick="showHideFragment"
            app:layout_constraintLeft_toRightOf="@id/replace_show_fragment"
            app:layout_constraintTop_toBottomOf="@id/replace_fragment_container"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>