<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <android.support.v7.widget.CardView
            android:id="@+id/cv_view_pager"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:cardBackgroundColor="@color/rosybrown"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="10dp">

        <TextView
                android:id="@+id/tv_view_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="viewPager"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:gravity="center"
                android:onClick="goViewPager"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
            android:id="@+id/cv_fragment_pager"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:cardBackgroundColor="@color/blueviolet"
            app:layout_constraintLeft_toRightOf="@id/cv_view_pager"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="10dp">

        <TextView
                android:id="@+id/tv_fragment_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="fragmentPager"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:gravity="center"
                android:onClick="goFragmentPager"/>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
            android:id="@+id/cv_fragment_state_pager"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:cardBackgroundColor="@color/fuchsia"
            app:layout_constraintLeft_toRightOf="@id/cv_fragment_pager"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="10dp">

        <TextView
                android:id="@+id/tv_fragment_state_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="fragmentStatePager"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:gravity="center"
                android:onClick="goFragmentStatePager"/>

    </android.support.v7.widget.CardView>






</android.support.constraint.ConstraintLayout>